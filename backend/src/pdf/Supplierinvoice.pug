        table.table-invoice
          thead
            tr.tableHeader
              th.service #{'Maxsulot'}
              th #{"O'lchov birligi"}
              th #{'Miqdor'}
              th #{'Narx'}
              th #{'Jami'}

              //- th #{'DISCOUNT'}
          tbody
            each item in model.items
              tr
                td.service #{item.product? item.product.name:item.itemName} 
                td.unit #{item.product?item.product.quantityUnit:item.unit}
                td.qty #{item.quantity}
                td.price  #{moneyFormatter({amount:item.price,currency_code:model.currency})}
                td.total #{moneyFormatter({amount:item.total,currency_code:model.currency})}
            tr
